<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>UploadFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateFolderServlet</servlet-name>
        <servlet-class>CreateFolderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Usuario_servlet</servlet-name>
        <servlet-class>control.Usuario_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login_servlet</servlet-name>
        <servlet-class>control.Login_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Playlist_servlet</servlet-name>
        <servlet-class>control.Playlist_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Musica_servlet</servlet-name>
        <servlet-class>control.Musica_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Pagamento_servlet</servlet-name>
        <servlet-class>control.Pagamento_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Restricao_servlet</servlet-name>
        <servlet-class>control.Restricao_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Assinatura_servlet</servlet-name>
        <servlet-class>control.Assinatura_servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/UploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateFolderServlet</servlet-name>
        <url-pattern>/CreateFolderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Usuario_servlet</servlet-name>
        <url-pattern>/usrv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login_servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Playlist_servlet</servlet-name>
        <url-pattern>/psrv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Musica_servlet</servlet-name>
        <url-pattern>/msrv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Pagamento_servlet</servlet-name>
        <url-pattern>/pgtosrv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Restricao_servlet</servlet-name>
        <url-pattern>/rsrv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Assinatura_servlet</servlet-name>
        <url-pattern>/asrv</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            1440
        </session-timeout>
    </session-config>
</web-app>
